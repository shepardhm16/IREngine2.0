  <script type="text/javascript">
$(document).ready(function(){
	$('#attachedfile').val("");
   $('#del_file').hide();
   
 $("#attachedfile").change(function (){
		var fileName = $(this).val();
		$('#del_file').show();
		
			 });

$('#del_file').click(function(){
            $('#del_file').hide();
			 $('#attachedfile').val("");
			});

});


